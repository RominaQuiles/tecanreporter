import jinja2
import os
loader = jinja2.FileSystemLoader (os.getcwd())
loader
jenv = jinja2.Environment(loader = loader, trim_blocks=True, lstrip_blocks=True)
jenv
template = jenv.get_template('novoovovovoo.htm')
template
print template.render(organism = "bacteria", strain = "Y456", phenomena = "fluorescence", time = "a1. a2", conditions = "normal", timedate = "5/6/2015", img = "pathway.needed")

